APP_NAME=ChiclayoTicket
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_URL=https://yourdomain.com

APP_LOCALE=es
APP_FALLBACK_LOCALE=es
APP_FAKER_LOCALE=es_PE

# Logging
LOG_CHANNEL=stack
LOG_LEVEL=error

# Base de Datos
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=logic_ticket
DB_USERNAME=root
DB_PASSWORD=

# Sesiones y Cache
SESSION_DRIVER=database
SESSION_LIFETIME=120
CACHE_STORE=database
QUEUE_CONNECTION=database

# Correo (SMTP recomendado para producción)
MAIL_MAILER=smtp
MAIL_HOST=smtp.mailtrap.io
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="no-reply@yourdomain.com"
MAIL_FROM_NAME="${APP_NAME}"

# Mercado Pago (Pagos)
MP_PUBLIC_KEY=
MP_ACCESS_TOKEN=
MP_APP_ID=

# Stripe (pagos con tarjeta)
# Obtén las claves en https://dashboard.stripe.com/apikeys
# Webhook: en Dashboard > Developers > Webhooks añade https://tu-dominio.com/api/stripe/webhook
# y escucha el evento checkout.session.completed
STRIPE_KEY=pk_test_xxx
STRIPE_SECRET=sk_test_xxx
STRIPE_WEBHOOK_SECRET=whsec_xxx
STRIPE_CURRENCY=pen

# Configuración ChiclayoTicket
LOGIC_TICKET_COMMISSION_PERCENTAGE=5
# Pasarela de pago: stripe | mercadopago | none (none = marcar como pagado sin pasarela)
LOGIC_TICKET_PAYMENT_DRIVER=stripe

# Vite
VITE_APP_NAME="${APP_NAME}"
